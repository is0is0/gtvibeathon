# API Keys - Add your API key for your chosen provider
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# AI Provider Configuration
# Choose: "anthropic" or "openai"
AI_PROVIDER=anthropic

# Model Configuration
# Anthropic: claude-3-5-sonnet-20241022, claude-3-opus-20240229, etc.
# OpenAI: gpt-4o, gpt-4-turbo, etc.
AI_MODEL=claude-3-5-sonnet-20241022

# Blender Configuration
BLENDER_PATH=/Applications/Blender.app/Contents/MacOS/Blender
# For Linux: /usr/bin/blender
# For Windows: C:\Program Files\Blender Foundation\Blender 4.0\blender.exe

# Output Configuration
OUTPUT_DIR=./output
RENDER_SAMPLES=128
RENDER_ENGINE=CYCLES  # CYCLES or EEVEE

# Agent Configuration
MAX_ITERATIONS=3
ENABLE_REVIEWER=true
ENABLE_ANIMATION=true
AUTO_REFINE=true

# Animation Configuration
ANIMATION_FRAMES=180
ANIMATION_FPS=24

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/3dagency.log
